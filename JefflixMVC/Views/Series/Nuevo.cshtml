@using JefflixMVC.Models.DTOS
@model SerieCreacionDTO

<div class="">
    <div class="card col-6 border-0">
        <div class="card-header bg-black text-white">
            <h3>Nueva Serie</h3>
        </div>
        <form method="post">
            <div class="card-body bg-black">
                <div class="form-group">
                    <label class="text-white">Nombre</label>
                    <input style="color-scheme:dark" type="text" asp-for=Nombre maxlength="50" class="form-control bg-black text-white" />
                    <span class="text-danger" asp-validation-for=Nombre></span>
                </div>
                <div class="form-group">
                    <label class="text-white">Portada</label>
                    <input style="color-scheme:dark" type="text" asp-for=Portada maxlength="255" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Director</label>
                    <input style="color-scheme:dark" type="text" asp-for=Director maxlength="50" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Pais de Origen</label>
                    <input style="color-scheme:dark" type="text" asp-for=PaisOrigen maxlength="50" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Temporadas</label>
                    <input style="color-scheme:dark" type="number" asp-for=Temporadas class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Fecha de Creacion</label>
                    <input style="color-scheme:dark" type="date" asp-for=FechaCreacion class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Categoria</label>
                    <select asp-items="Model.CategoriasLista" asp-for=CategoriaId class="form-select bg-black text-white">
                        <option value="">--Seleccione--</option>
                    </select>
                    <span class="text-danger" asp-validation-for=CategoriaId></span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-black">
                <button type="submit" class="btn btn-success">Agregar</button>
                <a asp-controller="Series" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>