@page
@model Jefflix.Pages.nueva_categoriaModel
@{
}

<div class="">
    <div class="card col-6 border-0">
        <div class="card-header bg-black text-white">
            <h3>Nueva Categoria</h3>
        </div>
        <form method="post">
            <div class="card-body bg-black">
                <div class="form-group">
                    <label class="text-white">Nombre</label>
                    <input maxlength="50" asp-for="Nombre" class="form-control bg-black text-white"/>
                    <span class="text-danger" asp-validation-for="Nombre"></span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-black">
                <button type="submit" class="btn btn-success">Agregar</button>
                <a asp-page="/Categorias" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>