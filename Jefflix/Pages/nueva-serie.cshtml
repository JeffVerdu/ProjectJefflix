@page
@model Jefflix.Pages.nueva_serieModel
@{
}

<div class="">
    <div class="card col-6 border-0">
        <div class="card-header bg-black text-white">
            <h3>Nueva Serie</h3>
        </div>
        <form method="post">
            <div class="card-body bg-black">
                <div class="form-group">
                    <label class="text-white">Nombre</label>
                    <input style="color-scheme:dark" type="text" asp-for="Serie.Nombre" maxlength="50" class="form-control bg-black text-white" />
                    <span class="text-danger" asp-validation-for="Serie.Nombre"></span>
                </div>
                <div class="form-group">
                    <label class="text-white">Temporadas</label>
                    <input style="color-scheme:dark" asp-for="Serie.Temporadas" type="number" maxlength="2" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Director</label>
                    <input style="color-scheme:dark" type="text" asp-for="Serie.Director" maxlength="50" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Fecha de Creacion</label>
                    <input style="color-scheme:dark" asp-for="Serie.FechaCreacion" type="date" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Pais de Origen</label>
                    <input style="color-scheme:dark" type="text" asp-for="Serie.PaisOrigen" maxlength="50" class="form-control bg-black text-white" />
                </div>
                <div class="form-group">
                    <label class="text-white">Categoria</label>
                    <select asp-items="Model.CategoriasLista" asp-for="Serie.IdCategoria" class="form-select bg-black text-white">
                        <option value="">--Seleccione--</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Serie.IdCategoria"></span>
                </div>
                <div class="form-group">
                    <label class="text-white">Portada</label>
                    <input style="color-scheme:dark" type="text" asp-for="Serie.Portada" maxlength="255" class="form-control bg-black text-white" />
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-black">
                <button type="submit" class="btn btn-success">Agregar</button>
                <a asp-page="/series" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>