@page
@model Jefflix.Pages.seriesModel
@{
}

<div class="card col-8">
    <div class="card-header bg-primary text-white d-flex justify-content-between">
        <h3>Listado de Series</h3>
        <a asp-page="/nueva-categoria" class="btn btn-success"><i class="bi bi-plus-square"></i> Nueva Serie</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Temporadas</th>
                    <th>Fecha de Creación</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var serie in Model.Series)
                {
                    <tr>
                        <td>@serie.Id</td>
                        <td>@serie.Nombre</td>
                        <td>@serie.Temporadas</td>
                        <td>@serie.FechaCreacion</td>
                        <td>@serie.Categoria</td>
                        <td>
                            <button asp-route-id="@serie.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Editar</button>
                            <button asp-route-id="@serie.Id" class="btn btn-danger"><i class="bi bi-trash3"></i> Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>